{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@app/config/*": ["config/*"],
      "@app/internal/*": ["internal/*"],
      "@app/virtual-accounts": ["virtual-accounts/"],
      "@app/transaction-requests": ["transaction-requests/"],
      "@app/services": ["services/"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
